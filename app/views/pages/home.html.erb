<div class="container">
<h3>Discover your new favourite</h3>
  <div class="row">
    <% @random_categories.each do |category| %>
      <div class="col-xs-4">
        <div class="card">
          <div class="card-img">
            <%= link_to (image_tag (category.icon)), category_meals_path(category.id) %>
          </div>
          <div class="card-txt">
            <h5><strong><%= category.name %></strong></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Create award', new_award_path %>
</div>
