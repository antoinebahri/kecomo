<div class="wrapper-image">

</div>
      <!-- meal cloudinary image -->
<div class="card-meal-infos-meal-page">
        <!-- meal.name -->
  <h2><%= @meal.name %></h2>
        <!-- meal.award.review -->
    <div class="card-meal-voting">
      <div class="card-meal-vote-button">
        <%= image_tag "vote.png", :class => " card-meal-vote-img"%>
        <p><%= @meal.awards.count %></p>
      </div>
    </div>
</div>

<div class="card-meal-button-wrapper-show-page">
  <div class="card-meal-restaurant-button-show-page">
    <!-- meal.restaurant -->
    <p><%= link_to @meal.restaurant.name, restaurant_meals_path(@meal.restaurant.id) %></p>
  </div>
  <div class="card-meal-category-button-show-page">
    <!-- meal.category -->
    <p><%= link_to @meal.category.name, category_meals_path(@meal.category.id, @meal.id) %></p>

  </div>
</div>


<% @full_score.each do |award| %>
      <!-- meal reviews printed as lis -->
    <div class="reviews">
      <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large"/>
      <div class="reviews-content">
        <p><%= award.user.first_name%> <%= award.user.last_name%></p>
        <p><%= award.review %></p>
      </div>

      <div class="date-posted">
        <p><%="empty"%></p>
      </div>

      <div class="reviews-actions">
        <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
        <a href="#">Delete <i class="far fa-trash-alt"></i></a>
      </div>
    </div>
<% end %>
