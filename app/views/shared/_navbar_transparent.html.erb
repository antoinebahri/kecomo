<div class="navbar-wagon-transparent sticky">
  <!-- Logo -->
  <%= link_to image_tag("kecomo-logo.png"), root_path, class: "kecomo-logo" %>

  <% if user_signed_in? %>
  <!-- Right Navigation -->
    <div class="navbar-wagon-right">

      <!-- Profile picture with dropdown list -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.picture == nil %>
            <%= image_tag "blank-avatar.jpg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: { toggle: "dropdown" } %>
          <% else %>
            <%= image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: { toggle: "dropdown" } %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %></li>
            <li><%= link_to "Don't see your meal?", new_meal_path %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
          </ul>
        </div>
      </div>
    </div>
  <% else %>
    <div class="list-inline tabs-underlined">
      <p><%= link_to "Log in", new_user_session_path, class: "tab-underlined" %></p>
    </div>
  <% end %>
</div>
