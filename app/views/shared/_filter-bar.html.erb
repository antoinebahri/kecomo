<div class="filter-bar">

  <div class="filter-bar-tags">

    <div class="filter-bar-tags-cities">
      <div class="result">
        <i class="fas fa-map-pin"></i>
        Barcelona
      </div>
    </div>

    <div class="filter-bar-tags-cities">
      <%= form_tag all_meals_path, method: :get do %>
      <%= text_field_tag :searchquery, params[:searchquery], placeholder: "Search Category", class: "form-control", id: 'searchbar' %>
     <% end %>
    </div>
  </div>

  <div class="filter-bar-map">
    <% if params[:category_id].present? %>
    <%= link_to "", category_map_path(params[:category_id]), class: "far fa-map fa-2x" %>
    <% elsif params[:searchquery].present? %>
    <%= link_to "", category_map_path((@meals.first).category_id), class: "far fa-map fa-2x" %>
    <% end %>
  </div>
</div>
